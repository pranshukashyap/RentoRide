// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum to define user roles
enum Role {
  TENANT
  OWNER
}

// User model for both tenants and car owners
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation: An OWNER can have many cars
  cars Car[]
}

// Car model for vehicle listings
model Car {
  id          String   @id @default(cuid())
  make        String
  model       String
  year        Int
  location    String
  pricePerDay Float
  imageUrl    String
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relation: A car must have one owner
  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String
}