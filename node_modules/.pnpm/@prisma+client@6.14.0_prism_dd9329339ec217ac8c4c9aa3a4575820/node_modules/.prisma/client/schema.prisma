generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  TENANT
  OWNER
}

// Enums for the new car details
enum CarType {
  SEDAN
  SUV
  HATCHBACK
  LUXURY
}

enum Transmission {
  MANUAL
  AUTOMATIC
}

enum FuelType {
  PETROL
  DIESEL
  ELECTRIC
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  firstName String
  lastName  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cars      Car[]
}

model Car {
  id          String   @id @default(cuid())
  make        String
  model       String
  year        Int
  location    String
  pricePerDay Float
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  type            CarType
  transmission    Transmission
  fuelType        FuelType
  seatingCapacity Int
  description     String? // <-- Add this optional field

  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String
}
